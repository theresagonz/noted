<h2><%= @note.created_at.localtime.strftime("%A, %B %d, %Y") %></h2>

<br>

<h3><%= @note.content %></h3>

<br>

<% if @note.user != current_user(session) %>
  <h5>by <%= @note.user.name %> </h5>
  <br>
<% end %>

<h5>Tags:</h5>
<ul>
<% @note.tags.each do |tag| %>
  <li><%= tag.word %></li>
<% end %>

<% if @note.user == current_user(session) %>
<br>
This note is <%= @note.public == 0 ? 'private' : 'public' %>
<br>
<% end %>

<br>

<% if @note.user == current_user(session) %>
  <form action="/notes/<%= @note.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this note?')">
    <input type="hidden" name="_method" value="delete">
    <a class="btn btn-dark" href="/notes/<%= @note.id %>/edit" role="button">Edit</a>
    <input class="btn btn-danger" type="submit" value="Delete">
  </form>
  <br>
<% end %>

<a href="/index">Back to main page</a>