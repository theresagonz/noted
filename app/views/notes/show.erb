<h2><%= @note.created_at.localtime.strftime("%A, %B %d, %Y") %></h2>

<br>

<div class="row">
  <div class="col-sm-9">
    <h3><%= @note.content %></h3>

    <br>

    <% if @note.user != current_user(session) %>
      <h5>&ndash; <i><%= @note.user.name %></i></h5>
      <br>
    <% end %>
  </div>
  
  <div class="col-sm-3 sidebar">
    <h5>Tags:
    <% if @note.tags.empty? %>
      None
    <% end %>
    </h5>
    <ul>
    <% @note.tags.each do |tag| %>
      <li><a href="/tags/<%= tag.slug %>"><%= tag.word %></a></li>
    <% end %>
  </div>
</div>

<% if @note.user == current_user(session) %>
  <p><i>This note is <%= @note.public == 0 ? 'private' : 'public' %></i></p>
<% end %>


<% if @note.user == current_user(session) %>
  <form action="/notes/<%= @note.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this note?')">
    <input type="hidden" name="_method" value="delete">
    <a class="btn btn-dark" href="/notes/<%= @note.id %>/edit" role="button">Edit</a>
    <input class="btn btn-danger" type="submit" value="Delete">
  </form>
  <br>
<% end %>

<a href="/index">Back to main page</a>
