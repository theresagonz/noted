<h2>Edit Profile</h2>

<br>

<form action="/users/<%= current_user(session).username.downcase %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
    
    <div class="form-group">
      <label for="signup-name">Display name:</label><br>
      <input type="text" id="signup_name" name="name" value="<%= @user.name %>" class="form-control">
    </div>

    <div class="form-group">
      <label for="signup_username">Username:</label>
      <input type="username" id="signup_username" name="username" value="<%= @user.username %>" class="form-control">
    </div>

    <div>
      <input type="submit" class="btn btn-primary" value="Save changes">
      <a href="/index"><button type="button" class="btn btn-secondary">Cancel</button></a>
    </div>
</form>
