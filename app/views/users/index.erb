<div class="container">
  <div>
    <h4>Recent community notes</h4>
    <div class="note-list">
      <ul class="list-group">
      <% @public_notes.reverse.take(5).each do |note| %>
        <li class="list-group-item">  <%= note.created_at.localtime.strftime("%A, %B %d, %Y") %>:  <a href="/notes/<%= note.id %>"><%= note.content %></a> &ndash; <i><%= note.user.name %></i>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h4>My recent tags</h4>
      <div class="tag-list">
        <ul>
        <% @tags.reverse.take(5).each do |tag| %>
          <li><a href="/tags/<%= tag.slug %>"><%= tag.word %></a>
        <% end %>
        </ul>
        <a href="/my-tags" class="badge badge-info">View all my tags</a>
      </div>
    </div>
    <div class="col-sm">
      <h4>Popular public tags</h4>
      <div class="tag-list">
        <ul>
        <% @popular_public_tags.take(5).each do |tag| %>
          <li><a href="/tags/<%= tag.slug %>"><%= tag.word %></a>
        <% end %>
        </ul>
      </div>
      <a href="/public-tags" class="badge badge-info">View all public tags</a>
    </div>
  </div>
</div>

